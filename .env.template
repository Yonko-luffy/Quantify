# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# PostgreSQL Database Configuration
# Note: Password with special characters needs URL encoding: @ becomes %40
DATABASE_URL=postgresql://username:password@localhost:5432/your_database_name

# Flask Security Configuration
SECRET_KEY=your-secret-key-here-change-this-in-production

# reCAPTCHA Configuration
# Get your keys from: https://www.google.com/recaptcha/admin
# Site Key (Public Key) - shown to users
RECAPTCHA_PUBLIC_KEY=your-recaptcha-public-key-here

# Secret Key (Private Key) - kept secret on server
RECAPTCHA_PRIVATE_KEY=your-recaptcha-private-key-here

# Enable/disable CAPTCHA (set to 'true' to enable, 'false' to disable)
RECAPTCHA_ENABLED=false

# Optional reCAPTCHA Settings (uncomment to customize)
# RECAPTCHA_USE_SSL=true
# RECAPTCHA_THEME=light
# RECAPTCHA_TYPE=image  
# RECAPTCHA_SIZE=normal
